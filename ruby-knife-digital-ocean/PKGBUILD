# Maintainer: Alfredo Palhares <masterkorp@masterkorp.net>

_gemname=knife-digital_ocean
pkgname=ruby-$_gemname
pkgver=0.1.1
pkgrel=2
pkgdesc="A plugin for chef's knife to manage instances of DigitalOcean servers"
arch=('any')
url="https://github.com/rmoriz/knife-digital_ocean"
license=('Apache')
depends=('ruby' 'ruby-chef>=0' 'ruby-highline' 'ruby-digital_ocean')
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('905b812b3058af4bb7d6d5542835ea1f')


package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
