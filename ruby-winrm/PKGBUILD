_gemname=winrm
pkgname=ruby-$_gemname
pkgver=1.1.3
pkgrel=1
pkgdesc="Ruby library for Windows Remote Management"
arch=('any')
url="http://github.com/WinRb/WinRM"
license=('MIT')
depends=(
  'ruby'
  'ruby-gssapi-1.0.0'
  'ruby-httpclient>=2.2'
  'ruby-httpclient>=2.2.0.2'
  'ruby-nokogiri>=1.5'
  'ruby-rubyntlm-0.1.1'
  'ruby-uuidtools>=2.1.2'
  'ruby-savon-0.9.5'
  'ruby-logging>=1.6'
  'ruby-logging>=1.6.1'
)
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('ffbfeaca2cd8f4e170e9b83aed16f886')
sha1sums=('f83f31970bc707a5c15e59f3572bb878efa37ddb')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
