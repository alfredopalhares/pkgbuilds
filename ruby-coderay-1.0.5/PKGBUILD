# Maintainer: Alfredo Palhares <masterkorp@masterkorp.net>

_gemname=coderay
pkgname=ruby-$_gemname-1.0.5
pkgver=1.0.5
pkgrel=1
pkgdesc="Fast syntax highlighting for selected languages."
arch=('any')
url="http://coderay.rubychan.de"
license=('MIT')
depends=('ruby')
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('bc0686868dc85ae4202b8bdafb4349a8')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem

  # Do not conflit with the most up-to-date coderay version
  mv "$pkgdir/usr/bin/coderay" "$pkgdir/usr/bin/coderay-1.0.5"
}
