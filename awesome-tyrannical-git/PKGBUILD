# Maintainer: Alfredo Palhares <masterkorp@masterkorp.net>
# Please submit your patched directly to:
# https://github.com/masterkorp/pkgbuilds
pkgname=awesome-tyrannical-git
_gitname=tyrannical
pkgver=46.83a69e0
pkgrel=1
pkgdesc="Dynamic tagging configuration system for Awesome WM"
arch=("any")
url="https://github.com/Elv13/tyrannical"
license=('GPL')
depends=("awesome" "lua")
makedepends=('git')
source=("$_gitname::git+git://github.com/Elv13/tyrannical.git")
md5sums=("SKIP")

pkgver() {
  cd "$_gitname"
  echo $(git rev-list --count master).$(git rev-parse --short master)
}
build() {
  cd "$_gitname"
}

package() {
  cd "$_gitname"
  install -D -m644 init.lua $pkgdir/usr/share/awesome/lib/tyranical/init.lua
  install -D -m644 example.rc.lua $pkgdir/usr/share/doc/tyranical/example.rc.lua
  install -D -m644 README.md $pkgdir/usr/share/doc/tyranical/README.md
}

# vim:set ts=2 sw=2 et:
