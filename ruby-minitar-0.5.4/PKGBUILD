# Maintainer: Alfredo Palhares <masterkorp@masterkorp.net>

_gemname=minitar
pkgname=ruby-$_gemname-0.5.4
pkgver=0.5.4
pkgrel=1
pkgdesc="Provides POSIX tarchive management from Ruby programs. - Specific version for ruby-berkshelf"
arch=('any')
url="http://www.github.com/atoulme/minitar"
license=('MIT')
depends=('ruby')
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('f5bd734fb3eda7b979d1485ba48fc0ea')
sha1sums=('a3f6e076b312e0c8c25a9cb963e55e431f83f953')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
