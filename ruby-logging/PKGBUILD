_gemname=logging
pkgname=ruby-$_gemname
pkgver=1.8.1
pkgrel=1
pkgdesc="A flexible and extendable logging library for Ruby"
arch=('any')
url="http://rubygems.org/gems/logging"
license=('MIT')
depends=('ruby' 'ruby-little-plugger>=1.1.3' 'ruby-multi_json>=1.3.6')
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('9407ddb053f5cd8007acce80852af895')
sha1sums=('5e657307273cd074aae33047985040945b95b630')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
