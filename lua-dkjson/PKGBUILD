pkgname=lua-dkjson
pkgver=2.2
pkgrel=1
pkgdesc="This is a JSON module written in Lua without any dependencies to other external libraries. It supports UTF-8."
arch=(any)
url="http://chiselapp.com/user/dhkolf/repository/dkjson/home"
license=('MIT')
depends=(
  "lua"
)
source=(http://chiselapp.com/user/dhkolf/repository/dkjson/raw/dkjson.lua?name=2e0832b4027614d5d5c708a971d4f1c6ec04affb)
md5sums=('f90e4fa1700f0effffb827c2d91edfef')

package() {
  cd "$srcdir/"
  install -D -m644 "dkjson.lua?name=2e0832b4027614d5d5c708a971d4f1c6ec04affb" "$pkgdir/usr/lib/lua/5.2/dkjson.lua"
}

