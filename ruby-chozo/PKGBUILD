# Maintainer: Alfredo Palhares <masterkorp@masterkorp.net>

_gemname=chozo
pkgname=ruby-$_gemname
pkgver=0.6.1
pkgrel=1
pkgdesc="A collection of supporting libraries and Ruby core extensions"
arch=('any')
url="https://github.com/reset/chozo"
license=('Apache')
depends=('ruby' 'ruby-activesupport>=3.2.0' 'ruby-multi_json>=1.3.0' 'ruby-hashie>=2.0.2')
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('a422c9cbcdefd2798a74f41dd79b99b3')
sha1sums=('bfb27af4146e6ab6f333cb53b42dbc922ab58b33')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
