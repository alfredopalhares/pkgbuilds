# Maintainer: Alfredo Palhares <masterkorp@masterkorp.net>

_gemname=buff-shell_out
pkgname=ruby-$_gemname
pkgver=0.1.1
pkgrel=1
pkgdesc="Buff up your code with a mixin for issuing shell commands and collecting the output"
arch=('any')
url="https://github.com/RiotGames/buff-shell_out"
license=('Apache')
depends=(
  'ruby'
  'ruby-buff-ruby_engine>=0.1.0'
)
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('a04412d54ee14902e2c53347ecf8c5c6')
sha1sums=('ca934201442d435ae5e6164a3679dedcb23de18e')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
