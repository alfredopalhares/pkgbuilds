_gemname=ridley
pkgname=ruby-$_gemname-1.5.3
pkgver=1.5.3
pkgrel=1
pkgdesc="A reliable Chef API client with a clean syntax - Specific version for berkshelf"
arch=('any')
url="https://github.com/RiotGames/ridley"
license=('Apache')
depends=(
  'ruby'
  'ruby-addressable>=0'
  'ruby-varia_model>=0.1'
  'ruby-buff-config>=0.2'
  'ruby-buff-extensions>=0.3'
  'ruby-buff-ignore>=1.1'
  'ruby-buff-shell_out>=0.1'
  'ruby-celluloid>=0.15'
  'ruby-celluloid-io>=0.15'
  'ruby-erubis>=0'
  'ruby-faraday>=0.8.4'
  'ruby-hashie>=2.0.2'
  'ruby-json>=1.7.7'
  'ruby-mixlib-authentication>=1.3.0'
  'ruby-net-http-persistent>=2.8'
  'ruby-retryable>=0'
  'ruby-solve>=0.4.4'
)
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
sha1sums=('757b9a828778de8e6793705aa6a7627cd8a5591f')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
