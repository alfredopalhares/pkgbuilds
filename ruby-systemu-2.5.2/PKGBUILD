# Maintainer: Alfredo Palhares <masterkopr@masterkorp.net>

_gemname=systemu
pkgname=ruby-$_gemname-2.5.2
pkgver=2.5.2
pkgrel=1
pkgdesc="systemu - Specic version for chef"
arch=('any')
url="https://github.com/ahoward/systemu"
license=('MIT')
depends=('ruby')
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
sha1sums=('9fe27b2c97e7d8444dc54dd55d9a0a9ae6e7e253')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" $_gemname-$pkgver.gem
}
