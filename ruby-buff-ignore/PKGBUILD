# Maintainer: Alfredo Palhares <masterkorp@masterkorp.net>

_gemname=buff-ignore
pkgname=ruby-$_gemname
pkgver=1.1.1
pkgrel=1
pkgdesc="A Ruby library for parsing lists of files and applying pattern matching exclusion (such as .gitignore)"
arch=('any')
url="https://github.com/sethvargo/buff-ignore"
license=('Apache')
depends=('ruby')
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('86e45c336ad5fb8bb066ffe1403a347e')
sha1sums=('6d544726ea0f6b5c9ec9725584037f4733bce64e')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
