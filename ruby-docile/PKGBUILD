# Maintainer: Alfredo Palhares <masterkorp@masterkorp.net>

pkgname=ruby-docile
_gemname=docile
pkgver=1.1.2
pkgrel=1
pkgdesc="Docile keeps your Ruby DSLs tame and well-behaved"
arch=('any')
url="http://ms-ati.github.com/docile/"
license=("MIT")
groups=()
depends=('ruby')
makedepends=('ruby')
source=("http://gems.rubyforge.org/gems/docile-${pkgver}.gem")
noextract=("docile-${pkgver}.gem")
md5sums=('33ab92ee1ae3ca76138bc8189640a641')

package() {
  cd "${srcdir}"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" $_gemname-$pkgver.gem
}

