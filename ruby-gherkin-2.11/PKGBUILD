# Contributor: Rogof <com gmail fake.bios>

_gemname=gherkin
pkgname=ruby-$_gemname-2.11
pkgver=2.11.8
pkgrel=1
pkgdesc="A fast Gherkin lexer/parser based on the Ragel State Machine Compiler - Specific version for foodcritic"
arch=(any)
url="https://github.com/cucumber/gherkin"
license=(GPL)
depends=(ruby ruby-multi_json)
makedepends=(rubygems)
source=(http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('7b82839ec9f8e9130ad686c3f3d994a5')

package() {

	cd "$srcdir"
	local _gemdir=$(ruby -rubygems -e'puts Gem.default_dir')
	gem install --no-user-install --ignore-dependencies --verbose \
	            -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" \
	            "$_gemname-$pkgver.gem"
}

# vim: set noet :
