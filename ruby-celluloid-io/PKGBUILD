# Maintainer: Alfredo Palhares <masterkorp@masterkorp.net>

_gemname=celluloid-io
pkgname=ruby-$_gemname
pkgver=0.15.0
pkgrel=1
pkgdesc="Celluloid::IO allows you to monitor multiple IO objects within a Celluloid actor"
arch=('any')
url="http://github.com/celluloid/celluloid-io"
license=('MIT')
depends=('ruby' 'ruby-celluloid>=0.15.0' 'ruby-nio4r>=0.5.0')
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('39d561d3596c24eb81c1d500f0b82c25')
sha1sums=('a8366c9b01b11daf4738da2e9fa06adb10d612be')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
