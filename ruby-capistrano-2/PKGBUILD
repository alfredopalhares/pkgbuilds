# Maintainer: Alfredo Palhares <masterkorp@masterkorp.net>
# Please submit any pacthes to:
# https://github.com/masterkorp/pkgbuilds

_gemname=capistrano
pkgname=ruby-$_gemname-2
pkgver=2.15.5
pkgrel=1
pkgdesc="Capistrano - Welcome to easy deployment with Ruby over SSH - A version that does not brake your deploys to hell"
arch=('any')
url="http://github.com/capistrano/capistrano"
license=('MIT')
depends=(
  'ruby'
  'ruby-i18n'
  'ruby-sshkit'
)
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
md5sums=('fc4fc2ee06fb7b3b9608741e674eccd6')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -e'puts Gem.default_dir')"
  gem install --ignore-dependencies --no-user-install -i "$pkgdir$_gemdir" -n "$pkgdir/usr/bin" $_gemname-$pkgver.gem
}
