# $Id: PKGBUILD 101216 2013-11-19 19:40:25Z alucryd $
# Maintainer: Alfredo Palhares <masterkorp@masterkorp.net>
# Contribuitor: Maxime Gauduin <alucryd@gmail.com>
# Contributor: Alexsandr Pavlov <kidoz@mail.ru>

pkgname=ruby-mime-types-1.16
pkgver=1.16
pkgrel=1
pkgdesc="MIME Content-Type database"
arch=('any')
url="http://mime-types.rubyforge.org"
license=('GPL2' 'MIT' 'PerlArtistic')
depends=('ruby')
source=("http://rubygems.org/downloads/${pkgname#*-}.gem")
noextract=("${pkgname#*-}-${pkgver}.gem")
sha256sums=('c393a1cb8d6901e89b2eabc6c1ca2cfd46f3067c78848daf62cfa7ddc53b97ea')

prepare() {
  gem install --no-{document,user-install} --ignore-dependencies -i . ${pkgname#*-}.gem
}

package() {
  cd gems/${pkgname#*-}

  local _rubyver="$(ruby --version | sed 's/.* \(.*\..*\..*\)p.*/\1/')"

  install -dm 755 "${pkgdir}"/usr/lib/ruby/{gems/${_rubyver},vendor_ruby}
  mv lib "${pkgdir}"/usr/lib/ruby/vendor_ruby/${_rubyver}

# Gem compatibility
  mv ../../specifications "${pkgdir}"/usr/lib/ruby/gems/${_rubyver}/
}

# vim: ts=2 sw=2 et:
